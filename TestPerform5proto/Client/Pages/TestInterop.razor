@page "/jsTest"
<h1 class="text-center">JsRuntime vs JsInProcessRuntime</h1>

<BSContainer>
    <BSRow>
        <BSCol XS="6">
            <h3>Interop with IJSRuntime</h3>
            <p>Number of calls: @_jsRuntimeInput</p>
            <input type="range" min="1" max="2000" style="width: 90%;color:blue" @bind-value="_jsRuntimeInput" @bind-value:event="oninput" />
            <button class="btn btn-primary" @onclick="UseJs">Run Interop with IJSRuntime</button>
            @if (_jsRuntimeBusy)
            {
                <SpinKitCircle />
            }
        <h4 class="text-center">IJSRuntime</h4>
            <h6>Time Elapsed for IJSRuntime InvokeAsync: <span style="font-weight: 700; font-size:120%">@_elapsedMsJsRuntime</span></h6>
        </BSCol>
        <BSCol XS="6">
            <h3>Interop with IJInProcessSRuntime</h3>
            <p>Number of calls: @_jsProcessInput</p>
            <input type="range" min="1" max="2000" style="width: 90%;background-color:blue" @bind-value="_jsProcessInput" @bind-value:event="oninput"  />
            <button class="btn btn-primary" @onclick="UseJsInProcessRuntime">Run Interop with IJSInProcessRuntime</button>
            @if (_jsProcessBusy)
            {
                <SpinKitCircle />
            }
        <h4 class="text-center">IJInProcessSRuntime</h4>
            <h6>Time Elapsed for IJSInProcessRuntime Invoke: <span style="font-weight: 700; font-size:120%">@_elapsedMsJsProcess</span></h6>
        </BSCol>
    </BSRow>
</BSContainer>
